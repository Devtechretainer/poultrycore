@model PoultryWeb.Models.CustomerModel

<h4>Edit Customer (ID: @Model.CustomerId)</h4>

<form asp-action="Edit" asp-controller="Customer" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UserId" value="0" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ContactEmail" class="form-label"></label>
        <input asp-for="ContactEmail" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ContactPhone" class="form-label"></label>
        <input asp-for="ContactPhone" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label"></label>
        <input asp-for="City" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
</form>
