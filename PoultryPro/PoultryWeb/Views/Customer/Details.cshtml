@model PoultryWeb.Models.CustomerModel

@{
    ViewBag.Title = "Customer Details";
}

<h2>Customer Details</h2>

<dl class="dl-horizontal">
    <dt>Customer ID</dt>
    <dd>@Model.CustomerId</dd>

    <dt>Name</dt>
    <dd>@Model.Name</dd>

    <dt>Email</dt>
    <dd>@Model.ContactEmail</dd>

    <dt>Phone</dt>
    <dd>@Model.ContactPhone</dd>

    <dt>Address</dt>
    <dd>@Model.Address</dd>

    <dt>City</dt>
    <dd>@Model.City</dd>

    <dt>Created Date</dt>
    <dd>@Model.CreatedDate</dd>
</dl>

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>
