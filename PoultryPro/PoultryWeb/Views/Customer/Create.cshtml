 Views/Customer/Create.cshtml
@model PoultryWeb.Models.CustomerModel

@{
    ViewData["Title"] = "Create Customer";
}

<div class="container">
    <h2>Create New Customer</h2>

    @if (TempData["Success"] != null)
    {
    <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FarmId" class="control-label"></label>
            <input asp-for="FarmId" class="form-control" />
            <span asp-validation-for="FarmId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactEmail" class="control-label"></label>
            <input asp-for="ContactEmail" class="form-control" type="email" />
            <span asp-validation-for="ContactEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ContactPhone" class="control-label"></label>
            <input asp-for="ContactPhone" class="form-control" type="tel" />
            <span asp-validation-for="ContactPhone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create Customer" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}