@model IEnumerable<PoultryWeb.Models.SaleModel>

@{
    ViewBag.Title = "Sales By Flock";
    var flockId = ViewBag.FlockId as int?;
}

<h2>Sales for Flock @flockId</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sale Date</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Amount</th>
            <th>Customer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.SaleDate.ToShortDateString()</td>
                <td>@sale.Product</td>
                <td>@sale.Quantity</td>
                <td>@sale.UnitPrice</td>
                <td>@sale.TotalAmount</td>
                <td>@sale.CustomerName</td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Back to All Sales", "Index", "Sale", null, new { @class = "btn btn-secondary" })
</p>
