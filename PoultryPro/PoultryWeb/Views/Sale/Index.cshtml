@model IEnumerable<PoultryWeb.Models.SaleModel>

@{
    ViewBag.Title = "Sales Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .sales-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .table-section {
        flex: 1 1 100%;
        min-width: 300px;
        padding: 20px;
    }

    .bottom-bar {
        text-align: center;
        padding: 15px;
        border-top: 1px solid #ddd;
    }

    .modal-lg {
        max-width: 800px;
    }

    .filter-form {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 1rem;
        align-items: flex-end;
        width: 100%;
    }

        .filter-form label {
            display: inline-block;
            margin-right: 0.5rem;
            white-space: nowrap;
        }

        .filter-form .form-control {
            display: inline-block;
            width: auto;
        }

    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter {
        display: inline-block;
        margin-right: 1rem;
    }

    .dataTables_wrapper .dataTables_length {
        float: left;
    }

    .dataTables_wrapper .dataTables_filter {
        float: right;
    }

    .table-responsive {
        max-height: 500px;
        overflow-y: auto;
    }
</style>

<div class="sales-container">
    <div class="table-section">
        <h2>Sales Management</h2>

        <form id="filterForm" class="filter-form row w-100">
            <div class="col-md-2 d-flex align-items-center">
                <label for="startDate" class="me-2">From:</label>
                <input type="date" id="startDate" class="form-control" />
            </div>
            <div class="col-md-2 d-flex align-items-center">
                <label for="endDate" class="me-2">To:</label>
                <input type="date" id="endDate" class="form-control" />
            </div>
            <div class="col-md-3 d-flex align-items-center">
                <label for="productFilter" class="me-2">Product</label>
                <input type="text" id="productFilter" class="form-control" placeholder="Enter product" />
            </div>
            <div class="col-md-2 d-flex align-items-center">
                <button type="button" class="btn btn-primary me-2" onclick="applyFilter()">View</button>
            </div>
            <div class="col-md-3 d-flex justify-content-end align-items-center">
                <button class="btn btn-success me-2" onclick="exportCSV()">Export CSV</button>
                <button class="btn btn-danger" onclick="exportPDF()">Export PDF</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped" id="saleTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="toggle-col" data-col="0" checked /> Date</th>
                        <th><input type="checkbox" class="toggle-col" data-col="1" checked /> Product</th>
                        <th><input type="checkbox" class="toggle-col" data-col="2" checked /> Qty</th>
                        <th><input type="checkbox" class="toggle-col" data-col="3" checked /> Unit Price</th>
                        <th><input type="checkbox" class="toggle-col" data-col="4" checked /> Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-sale-id="@item.SaleId">
                            <td>@item.SaleDate.ToShortDateString()</td>
                            <td>@item.Product</td>
                            <td>@item.Quantity</td>
                            <td>@item.UnitPrice</td>
                            <td>
                                <button class="btn btn-danger btn-sm" onclick="event.stopPropagation(); confirmDelete(@item.SaleId)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="bottom-bar">
    <button class="btn btn-primary" onclick="openCreateSale()">
        <i class="bi bi-plus-circle"></i> Create New Sale
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="saleModal" tabindex="-1" aria-labelledby="saleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="saleModalLabel">Sale</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editContainer"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
    <script>
        let saleTable;

        document.addEventListener('DOMContentLoaded', function () {
            saleTable = new DataTable('#saleTable', {
                pageLength: 10,
                scrollY: '300px',
                scrollCollapse: true,
                ordering: true
            });

            document.querySelectorAll('.toggle-col').forEach(cb => {
                cb.addEventListener('change', function () {
                    const column = saleTable.column(this.dataset.col);
                    column.visible(this.checked);
                });
            });

            document.getElementById('saleTable').addEventListener('click', function (e) {
                var row = e.target.closest('tr[data-sale-id]');
                if (row && !e.target.closest('.btn-danger')) {
                    var id = row.getAttribute('data-sale-id');
                    loadEditPartial(id);
                }
            });
        });

        function applyFilter() {
            const start = document.getElementById('startDate').value;
            const end = document.getElementById('endDate').value;
            const product = document.getElementById('productFilter').value.toLowerCase();

            const rows = document.querySelectorAll('#saleTable tbody tr');
            rows.forEach(row => {
                const date = row.children[0].textContent;
                const prod = row.children[1].textContent.toLowerCase();
                const show = (!start || new Date(date) >= new Date(start)) &&
                             (!end || new Date(date) <= new Date(end)) &&
                             (!product || prod.includes(product));
                row.style.display = show ? '' : 'none';
            });
        }

        function openCreateSale() {
            fetch('/Sale/CreatePartial')
                .then(res => res.text())
                .then(html => {
                    document.getElementById('saleModalLabel').innerText = 'Create Sale';
                    document.getElementById('editContainer').innerHTML = html;
                    var modal = new bootstrap.Modal(document.getElementById('saleModal'));
                    modal.show();
                });
        }

        function loadEditPartial(id) {
            fetch('/Sale/EditPartial/' + id)
                .then(res => res.text())
                .then(html => {
                    document.getElementById('saleModalLabel').innerText = 'Edit Sale (ID: ' + id + ')';
                    document.getElementById('editContainer').innerHTML = html;
                    var modal = new bootstrap.Modal(document.getElementById('saleModal'));
                    modal.show();
                });
        }

        function loadDeletePartial(id) {
            fetch('/Sale/DeletePartial/' + id)
                .then(res => res.text())
                .then(html => {
                    document.getElementById('saleModalLabel').innerText = 'Delete Sale';
                    document.getElementById('editContainer').innerHTML = html;
                    var modal = new bootstrap.Modal(document.getElementById('saleModal'));
                    modal.show();
                });
        }

        function confirmDelete(id) {
            loadDeletePartial(id);
        }

        function exportCSV() {
            let csvContent = "data:text/csv;charset=utf-8,Date,Product,Qty,Unit Price\n";
            document.querySelectorAll('#saleTable tbody tr').forEach(row => {
                if (row.style.display !== 'none') {
                    const cols = Array.from(row.children).slice(0, 4).map(td => td.textContent.trim());
                    csvContent += cols.join(",") + "\n";
                }
            });
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "Sales_Report.csv");
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        function exportPDF() {
            const doc = new jspdf.jsPDF();
            doc.text("Sales Report", 20, 10);

            let rowData = [];
            document.querySelectorAll('#saleTable tbody tr').forEach(row => {
                if (row.style.display !== 'none') {
                    const cols = Array.from(row.children).slice(0, 4).map(td => td.textContent.trim());
                    rowData.push(cols);
                }
            });

            doc.autoTable({
                head: [["Date", "Product", "Qty", "Unit Price"]],
                body: rowData
            });

            doc.save("Sales_Report.pdf");
        }
    </script>
}
