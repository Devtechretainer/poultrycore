@model IEnumerable<PoultryWeb.Models.ExpenseModel>

@{
    ViewBag.Title = "Expenses By Flock";
    var flockId = ViewBag.FlockId as int?;
}

<h2>Expenses for Flock @flockId</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Category</th>
            <th>Amount</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.ExpenseDate.ToShortDateString()</td>
                <td>@e.Category</td>
                <td>@e.Amount</td>
                <td>@e.Description</td>
            </tr>
        }
    </tbody>
</table>

<p>
    @Html.ActionLink("Back to All Expenses", "Index", "Expense", null, new { @class = "btn btn-secondary" })
</p>
