@model PoultryWeb.Models.ExpenseModel

@{
    ViewBag.Title = "Expense Details";
}

<h2>Expense Details</h2>

<dl class="dl-horizontal">
    <dt>Expense ID</dt>
    <dd>@Model.ExpenseId</dd>

    <dt>Date</dt>
    <dd>@Model.ExpenseDate.ToShortDateString()</dd>

    <dt>Category</dt>
    <dd>@Model.Category</dd>

    <dt>Amount</dt>
    <dd>@Model.Amount</dd>

    <dt>Description</dt>
    <dd>@Model.Description</dd>

    <dt>Payment Method</dt>
    <dd>@Model.PaymentMethod</dd>

    <dt>Flock ID</dt>
    <dd>@Model.FlockId</dd>

    <dt>Created Date</dt>
    <dd>@Model.CreatedDate</dd>
</dl>

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>
