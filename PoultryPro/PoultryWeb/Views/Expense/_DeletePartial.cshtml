@model PoultryWeb.Models.ExpenseModel

<h4>Delete Expense (ID: @Model.ExpenseId)</h4>

<p>Are you sure you want to delete this expense record?</p>
<ul>
    <li><strong>Category:</strong> @Model.Category</li>
    <li><strong>Date:</strong> @Model.ExpenseDate.ToShortDateString()</li>
    <li><strong>Amount:</strong> @Model.Amount</li>
</ul>

<form asp-action="DeleteConfirmed" asp-controller="Expense" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ExpenseId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    @* <button type="button" class="btn btn-secondary" onclick="closeRightPanel()">Cancel</button> *@
</form>
