@model PoultryWeb.Models.ExpenseModel

@{
    ViewBag.Title = "Delete Expense";
}

<h2>Delete Expense</h2>

<h3>Are you sure you want to delete this record?</h3>
<hr />

<dl class="dl-horizontal">
    <dt>Expense ID</dt>
    <dd>@Model.ExpenseId</dd>

    <dt>Date</dt>
    <dd>@Model.ExpenseDate.ToShortDateString()</dd>

    <dt>Category</dt>
    <dd>@Model.Category</dd>

    <dt>Amount</dt>
    <dd>@Model.Amount</dd>

    <dt>Description</dt>
    <dd>@Model.Description</dd>
</dl>

@using (Html.BeginForm("DeleteConfirmed", "Expense", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ExpenseId)
    <input type="submit" class="btn btn-danger" value="Delete" />
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}
