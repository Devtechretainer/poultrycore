@{
    ViewBag.Title = "Poultry Farm Management Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // or your chosen layout
}

<div class="container dashboard-container">
    <h1 class="dashboard-heading">Poultry Farm Management Dashboard</h1>

    <div class="card-grid">

        <!-- Flock -->
        <div class="card dashboard-card">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-egg"></i>
                Flock
            </div>
            <div class="card-body">
                <p>Manage flocks, start dates, breed info, and more.</p>
                <a href="@Url.Action("Index", "Flock")" class="btn btn-secondary btn-crud">View All</a>
                <a href="@Url.Action("Create", "Flock")" class="btn btn-success btn-crud">Create New</a>
            </div>
        </div>

        <!-- Egg Production -->
        <div class="card dashboard-card">
            <div class="card-header bg-success text-white">
                <i class="bi bi-egg-fill"></i>
                Egg Production
            </div>
            <div class="card-body">
                <p>Record daily egg production for each flock.</p>
                <a href="@Url.Action("Index", "EggProduction")" class="btn btn-secondary btn-crud">View All</a>
                <a href="@Url.Action("Create", "EggProduction")" class="btn btn-success btn-crud">Record New</a>
            </div>
        </div>

        <!-- Feed Usage -->
        <div class="card dashboard-card">
            <div class="card-header bg-warning text-white">
                <i class="bi bi-bag-check"></i>
                Feed Usage
            </div>
            <div class="card-body">
                <p>Track and update daily feed consumption.</p>
                <a href="@Url.Action("Index", "FeedUsage")" class="btn btn-secondary btn-crud">View All</a>
                <a href="@Url.Action("Create", "FeedUsage")" class="btn btn-success btn-crud">Add Usage</a>
            </div>
        </div>

        <!-- Inventory -->
        <div class="card dashboard-card">
            <div class="card-header bg-info text-white">
                <i class="bi bi-box-seam"></i>
                Inventory
            </div>
            <div class="card-body">
                <p>Manage feed, medicines, and other supplies in stock.</p>
                <a href="@Url.Action("Index", "Inventory")" class="btn btn-secondary btn-crud">View All</a>
                <a href="@Url.Action("Create", "Inventory")" class="btn btn-success btn-crud">Add Item</a>
            </div>
        </div>

        <!-- Expense -->
        <div class="card dashboard-card">
            <div class="card-header bg-danger text-white">
                <i class="bi bi-cash-coin"></i>
                Expense
            </div>
            <div class="card-body">
                <p>Track farm expenses like feed, labor, utilities.</p>
                <a href="@Url.Action("Index", "Expense")" class="btn btn-secondary btn-crud">View All</a>
                <a href="@Url.Action("Create", "Expense")" class="btn btn-success btn-crud">Add Expense</a>
            </div>
        </div>

        <!-- Sales -->
        <div class="card dashboard-card">
            <div class="card-header bg-dark text-white">
                <i class="bi bi-cart"></i>
                Sales
            </div>
            <div class="card-body">
                <p>Manage egg or bird sales, track revenue, etc.</p>
                <a href="@Url.Action("Index", "Sale")" class="btn btn-secondary btn-crud">View All</a>
                <a href="@Url.Action("Create", "Sale")" class="btn btn-success btn-crud">New Sale</a>
            </div>
        </div>

        <!-- Customers -->
        <div class="card dashboard-card">
            <div class="card-header bg-secondary text-white">
                <i class="bi bi-people"></i>
                Customers
            </div>
            <div class="card-body">
                <p>Manage buyer information for eggs, birds, or supplies.</p>
                <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary btn-crud">View All</a>
                <a href="@Url.Action("Create", "Customer")" class="btn btn-success btn-crud">Add Customer</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <!-- Optionally load Bootstrap Icons or any icons library -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
