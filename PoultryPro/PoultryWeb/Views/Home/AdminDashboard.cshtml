@{
    ViewBag.Title = "Admin Dashboard - Poultry Farm Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 60px 20px;
            text-align: center;
            border-radius: 10px;
            margin-bottom: 30px;
        }
        
        .hero h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
        }
        
        .welcome-message {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border-left: 4px solid #667eea;
        }
        
        .admin-badge {
            background: #28a745;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9em;
            display: inline-block;
            margin-left: 10px;
        }
    </style>
}

<!-- HERO SECTION -->
<div class="hero">
