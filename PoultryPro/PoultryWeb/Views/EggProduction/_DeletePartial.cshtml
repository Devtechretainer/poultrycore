@model PoultryWeb.Models.EggProductionModel

<h4>Delete Egg Production (ID: @Model.ProductionId)</h4>

<p>Are you sure you want to delete this egg production record?</p>
<ul>
    <li><strong>Flock ID:</strong> @Model.FlockId</li>
    <li><strong>Date:</strong> @Model.ProductionDate.ToShortDateString()</li>
    <li><strong>Egg Count:</strong> @Model.EggCount</li>
    <li><strong>Broken Eggs:</strong> @Model.BrokenEggs</li>
</ul>

<form asp-action="DeleteConfirmed" asp-controller="EggProduction" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductionId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
</form>
