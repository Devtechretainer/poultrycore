@model IEnumerable<PoultryWeb.Models.EggProductionModel>

@{
    ViewBag.Title = "Egg Production Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .egg-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .table-section {
        flex: 1 1 100%;
        min-width: 300px;
        padding: 20px;
    }

    .bottom-bar {
        text-align: center;
        padding: 15px;
        border-top: 1px solid #ddd;
    }

    .modal-lg {
        max-width: 800px;
    }

    .filter-form {
        display: flex;
        flex-wrap: wrap;
        /* gap: 1rem; */
        margin-bottom: 1rem;
        align-items: flex-end;
        width: 100%;
    }

        .filter-form label {
            display: inline-block;
            margin-right: 0.5rem;
            white-space: nowrap;
        }

        .filter-form .form-control {
            display: inline-block;
            width: auto;
        }

    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter {
        display: inline-block;
        margin-right: 1rem;
    }

    .dataTables_wrapper .dataTables_length {
        float: left;
    }

    .dataTables_wrapper .dataTables_filter {
        float: right;
    }

    .table-responsive {
        max-height: 500px;
        overflow-y: auto;
    }
</style>

<div class="egg-container">
    <div class="table-section">
        <h2>Egg Production Management</h2>

        <form id="filterForm" class="filter-form row w-100">
            <div class="col-md-3 d-flex align-items-center">
                <label for="startDate" class="me-2">From:</label>
                <input type="date" id="startDate" class="form-control" />
            </div>
            <div class="col-md-3 d-flex align-items-center">
                <label for="endDate" class="me-2">To:</label>
                <input type="date" id="endDate" class="form-control" />
            </div>
            <div class="col-md-3 d-flex align-items-center">
                <label for="flockFilter" class="me-2">Flock ID</label>
                <input type="text" id="flockFilter" class="form-control" placeholder="Enter Flock ID" />
            </div>
            <div class="col-md-3 d-flex justify-content-end align-items-center">
                <button type="button" class="btn btn-primary me-2" onclick="applyFilter()">View</button>
                <button class="btn btn-success me-2" onclick="exportCSV()">Export CSV</button>
                <button class="btn btn-danger" onclick="exportPDF()">Export PDF</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped" id="eggTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="toggle-col" data-col="0" checked /> Flock ID</th>
                        <th><input type="checkbox" class="toggle-col" data-col="1" checked /> Date</th>
                        <th><input type="checkbox" class="toggle-col" data-col="2" checked /> Egg Count</th>
                        <th><input type="checkbox" class="toggle-col" data-col="3" checked /> Broken</th>
                        <th><input type="checkbox" class="toggle-col" data-col="4" checked /> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-production-id="@item.ProductionId">
                            <td>@item.FlockId</td>
                            <td>@item.ProductionDate.ToShortDateString()</td>
                            <td>@item.EggCount</td>
                            <td>@item.BrokenEggs</td>
                            <td>
                                <button class="btn btn-danger btn-sm" onclick="event.stopPropagation(); confirmDelete(@item.ProductionId)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="2" class="text-end">Total Eggs:</th>
                        <th id="totalEggs">0</th>
                        <th colspan="2"></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<div class="bottom-bar">
    <button class="btn btn-primary" onclick="openCreateProduction()">
        <i class="bi bi-plus-circle"></i> Create New Production
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="eggModal" tabindex="-1" aria-labelledby="eggModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="eggModalLabel">Egg Production</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editContainer"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>

    <script>
        let eggTable;

        document.addEventListener('DOMContentLoaded', function () {
            eggTable = new DataTable('#eggTable', {
                pageLength: 10,
                scrollY: '300px',
                scrollCollapse: true,
                ordering: true,
                drawCallback: function () {
                    updateTotal();
                }
            });

            document.querySelectorAll('.toggle-col').forEach(cb => {
                cb.addEventListener('change', function () {
                    const column = eggTable.column(this.dataset.col);
                    column.visible(this.checked);
                });
            });

            document.getElementById('eggTable').addEventListener('click', function (e) {
                var row = e.target.closest('tr[data-production-id]');
                if (row && !e.target.closest('.btn-danger')) {
                    var id = row.getAttribute('data-production-id');
                    loadEditPartial(id);
                }
            });
        });

        function applyFilter() {
            const start = document.getElementById('startDate').value;
            const end = document.getElementById('endDate').value;
            const flockId = document.getElementById('flockFilter').value.toLowerCase();

            const rows = document.querySelectorAll('#eggTable tbody tr');
            rows.forEach(row => {
                const date = row.children[1].textContent;
                const flock = row.children[0].textContent.toLowerCase();
                const show = (!start || new Date(date) >= new Date(start)) &&
                             (!end || new Date(date) <= new Date(end)) &&
                             (!flockId || flock.includes(flockId));
                row.style.display = show ? '' : 'none';
            });

            updateTotal();
        }

        function updateTotal() {
            let total = 0;
            document.querySelectorAll('#eggTable tbody tr').forEach(row => {
                if (row.style.display !== 'none') {
                    total += parseInt(row.children[2].textContent) || 0;
                }
            });
            document.getElementById('totalEggs').innerText = total;
        }

        function openCreateProduction() {
            fetch('/EggProduction/CreatePartial')
                .then(res => res.text())
                .then(html => {
                    document.getElementById('eggModalLabel').innerText = 'Create Egg Production';
                    document.getElementById('editContainer').innerHTML = html;
                    var modal = new bootstrap.Modal(document.getElementById('eggModal'));
                    modal.show();
                });
        }

        function loadEditPartial(id) {
            fetch('/EggProduction/EditPartial/' + id)
                .then(res => res.text())
                .then(html => {
                    document.getElementById('eggModalLabel').innerText = 'Edit Egg Production (ID: ' + id + ')';
                    document.getElementById('editContainer').innerHTML = html;
                    var modal = new bootstrap.Modal(document.getElementById('eggModal'));
                    modal.show();
                });
        }

        function loadDeletePartial(id) {
            fetch('/EggProduction/DeletePartial/' + id)
                .then(res => res.text())
                .then(html => {
                    document.getElementById('eggModalLabel').innerText = 'Delete Egg Production';
                    document.getElementById('editContainer').innerHTML = html;
                    var modal = new bootstrap.Modal(document.getElementById('eggModal'));
                    modal.show();
                });
        }

        function confirmDelete(id) {
            loadDeletePartial(id);
        }

        function exportCSV() {
            let csvContent = "data:text/csv;charset=utf-8,Flock ID,Date,Egg Count,Broken\n";
            document.querySelectorAll('#eggTable tbody tr').forEach(row => {
                if (row.style.display !== 'none') {
                    const cols = Array.from(row.children).slice(0, 4).map(td => td.textContent.trim());
                    csvContent += cols.join(",") + "\n";
                }
            });
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "EggProduction_Report.csv");
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        function exportPDF() {
            const doc = new jspdf.jsPDF();
            doc.text("Egg Production Report", 20, 10);

            let rowData = [];
            document.querySelectorAll('#eggTable tbody tr').forEach(row => {
                if (row.style.display !== 'none') {
                    const cols = Array.from(row.children).slice(0, 4).map(td => td.textContent.trim());
                    rowData.push(cols);
                }
            });

            doc.autoTable({
                head: [["Flock ID", "Date", "Egg Count", "Broken"]],
                body: rowData
            });

            doc.save("EggProduction_Report.pdf");
        }
    </script>
}
