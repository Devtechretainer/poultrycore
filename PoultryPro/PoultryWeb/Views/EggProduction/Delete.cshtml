@model PoultryWeb.Models.EggProductionModel
@{
    ViewBag.Title = "Delete Egg Production Record";
}

<h2>Delete Egg Production Record</h2>

<h3>Are you sure you want to delete this record?</h3>
<hr />

<dl class="dl-horizontal">
    <dt>ID</dt>
    <dd>@Model.ProductionId</dd>

    <dt>Flock ID</dt>
    <dd>@Model.FlockId</dd>

    <dt>Date</dt>
    <dd>@Model.ProductionDate.ToShortDateString()</dd>

    <dt>Egg Count</dt>
    <dd>@Model.EggCount</dd>

    <dt>Broken Eggs</dt>
    <dd>@Model.BrokenEggs</dd>

    <dt>Notes</dt>
    <dd>@Model.Notes</dd>
</dl>

@using (Html.BeginForm("DeleteConfirmed", "EggProduction", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProductionId)
    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Cancel", "Index")
}
