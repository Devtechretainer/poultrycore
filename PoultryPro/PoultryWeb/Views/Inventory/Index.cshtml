@model IEnumerable<PoultryWeb.Models.InventoryItemModel>

@{
    ViewBag.Title = "Inventory Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .inventory-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .table-section {
        flex: 1 1 100%;
        min-width: 300px;
        padding: 20px;
    }

    .bottom-bar {
        text-align: center;
        padding: 15px;
        border-top: 1px solid #ddd;
    }

    .modal-lg {
        max-width: 800px;
    }

    .filter-form {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 1rem;
        align-items: flex-end;
        width: 100%;
    }

        .filter-form label {
            display: inline-block;
            margin-right: 0.5rem;
            white-space: nowrap;
        }

        .filter-form .form-control {
            display: inline-block;
            width: auto;
        }

    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter {
        display: inline-block;
        margin-right: 1rem;
    }

    .dataTables_wrapper .dataTables_length {
        float: left;
    }

    .dataTables_wrapper .dataTables_filter {
        float: right;
    }

    .table-responsive {
        max-height: 500px;
        overflow-y: auto;
    }
</style>

<div class="inventory-container">
    <div class="table-section">
        <h2>Inventory Management</h2>

        <form id="filterForm" class="filter-form row w-100">
            <div class="col-md-3 d-flex align-items-center">
                <label for="categoryFilter" class="me-2">Category</label>
                <input type="text" id="categoryFilter" class="form-control" placeholder="Enter category" />
            </div>
            <div class="col-md-3 d-flex align-items-center">
                <label for="itemFilter" class="me-2">Item</label>
                <input type="text" id="itemFilter" class="form-control" placeholder="Enter item name" />
            </div>
            <div class="col-md-3 d-flex align-items-center">
                <button type="button" class="btn btn-primary me-2" onclick="applyFilter()">View</button>
            </div>
            <div class="col-md-3 d-flex justify-content-end align-items-center">
                <button class="btn btn-success me-2" onclick="exportCSV()">Export CSV</button>
                <button class="btn btn-danger" onclick="exportPDF()">Export PDF</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped" id="invTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" class="toggle-col" data-col="0" checked /> Item Name</th>
                        <th><input type="checkbox" class="toggle-col" data-col="1" checked /> Category</th>
                        <th><input type="checkbox" class="toggle-col" data-col="2" checked /> Qty In Stock</th>
                        <th><input type="checkbox" class="toggle-col" data-col="3" checked /> Active</th>
                        <th><input type="checkbox" class="toggle-col" data-col="4" checked /> Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr data-item-id="@item.ItemId">
                            <td>@item.ItemName</td>
                            <td>@item.Category</td>
                            <td>@item.QuantityInStock</td>
                            <td>@(item.IsActive ? "Yes" : "No")</td>
                            <td>
                                <button class="btn btn-danger btn-sm" onclick="event.stopPropagation(); confirmDeleteItem(@item.ItemId)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="bottom-bar">
    <button class="btn btn-primary" onclick="openCreateItem()">
        <i class="bi bi-plus-circle"></i> Create New Item
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="invModal" tabindex="-1" aria-labelledby="invModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="invModalLabel">Inventory Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="editContainer"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>

    <script>
        let invTable;

        document.addEventListener('DOMContentLoaded', function () {
            invTable = new DataTable('#invTable', {
                pageLength: 10,
                scrollY: '300px',
                scrollCollapse: true,
                ordering: true
            });

            document.querySelectorAll('.toggle-col').forEach(cb => {
                cb.addEventListener('change', function () {
                    const column = invTable.column(this.dataset.col);
                    column.visible(this.checked);
                });
            });

            document.getElementById('invTable').addEventListener('click', function (e) {
                var row = e.target.closest('tr[data-item-id]');
                if (row && !e.target.closest('.btn-danger')) {
                    var id = row.getAttribute('data-item-id');
                    loadEditPartial(id);
                }
            });
        });

        function applyFilter() {
            const category = document.getElementById('categoryFilter').value.toLowerCase();
            const item = document.getElementById('itemFilter').value.toLowerCase();

            const rows = document.querySelectorAll('#invTable tbody tr');
            rows.forEach(row => {
                const cat = row.children[1].textContent.toLowerCase();
                const name = row.children[0].textContent.toLowerCase();
                const show = (!category || cat.includes(category)) &&
                             (!item || name.includes(item));
                row.style.display = show ? '' : 'none';
            });
        }

        function openCreateItem() {
            fetch('/Inventory/CreatePartial')
                .then(res => res.text())
                .then(html => {
                    document.getElementById('invModalLabel').innerText = 'Create Item';
                    document.getElementById('editContainer').innerHTML = html;
                    var modal = new bootstrap.Modal(document.getElementById('invModal'));
                    modal.show();
                });
        }

        function loadEditPartial(id) {
            fetch('/Inventory/EditPartial/' + id)
                .then(res => res.text())
                .then(html => {
                    document.getElementById('invModalLabel').innerText = 'Edit Item (ID: ' + id + ')';
                    document.getElementById('editContainer').innerHTML = html;
                    var modal = new bootstrap.Modal(document.getElementById('invModal'));
                    modal.show();
                });
        }

        function loadDeletePartial(id) {
            fetch('/Inventory/DeletePartial/' + id)
                .then(res => res.text())
                .then(html => {
                    document.getElementById('invModalLabel').innerText = 'Delete Item';
                    document.getElementById('editContainer').innerHTML = html;
                    var modal = new bootstrap.Modal(document.getElementById('invModal'));
                    modal.show();
                });
        }

        function confirmDeleteItem(id) {
            loadDeletePartial(id);
        }

        function exportCSV() {
            let csvContent = "data:text/csv;charset=utf-8,Item Name,Category,Qty In Stock,Active\n";
            document.querySelectorAll('#invTable tbody tr').forEach(row => {
                if (row.style.display !== 'none') {
                    const cols = Array.from(row.children).slice(0, 4).map(td => td.textContent.trim());
                    csvContent += cols.join(",") + "\n";
                }
            });
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement("a");
            link.setAttribute("href", encodedUri);
            link.setAttribute("download", "Inventory_Report.csv");
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        function exportPDF() {
            const doc = new jspdf.jsPDF();
            doc.text("Inventory Report", 20, 10);

            let rowData = [];
            document.querySelectorAll('#invTable tbody tr').forEach(row => {
                if (row.style.display !== 'none') {
                    const cols = Array.from(row.children).slice(0, 4).map(td => td.textContent.trim());
                    rowData.push(cols);
                }
            });

            doc.autoTable({
                head: [["Item Name", "Category", "Qty In Stock", "Active"]],
                body: rowData
            });

            doc.save("Inventory_Report.pdf");
        }
    </script>
}
