@model PoultryWeb.Models.InventoryItemModel

@{
    ViewBag.Title = "Delete Inventory Item";
}

<h2>Delete Inventory Item</h2>

<h3>Are you sure you want to delete this item?</h3>
<hr />

<dl class="dl-horizontal">
    <dt>Item ID</dt>
    <dd>@Model.ItemId</dd>

    <dt>Item Name</dt>
    <dd>@Model.ItemName</dd>

    <dt>Category</dt>
    <dd>@Model.Category</dd>

    <dt>Quantity In Stock</dt>
    <dd>@Model.QuantityInStock</dd>
</dl>

@using (Html.BeginForm("DeleteConfirmed", "Inventory", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ItemId)
    <input type="submit" class="btn btn-danger" value="Delete" />
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}
