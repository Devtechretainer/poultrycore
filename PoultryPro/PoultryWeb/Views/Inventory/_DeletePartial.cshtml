@model PoultryWeb.Models.InventoryItemModel

<h4>Delete Inventory Item (@Model.ItemId)</h4>

<p>Are you sure you want to delete this item?</p>
<ul>
    <li><strong>Name:</strong> @Model.ItemName</li>
    <li><strong>Category:</strong> @Model.Category</li>
    <li><strong>Qty In Stock:</strong> @Model.QuantityInStock</li>
</ul>

<form asp-action="DeleteConfirmed" asp-controller="Inventory" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ItemId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
</form>
 