@model IEnumerable<PoultryWeb.Models.FeedUsageModel>

@{
    ViewBag.Title = "Feed Usage List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>

    </style>
}

<div class="split-container">
    <div class="left-panel">
        <h2>Feed Usage Management</h2>
        <table class="usage-table" id="usageTable">
            <thead>
                <tr>
                    <th>Flock ID</th>
                    <th>Date</th>
                    <th>Feed Type</th>
                    <th>Quantity (Kg)</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr data-usage-id="@item.FeedUsageId">
                        <td>@item.FlockId</td>
                        <td>@item.UsageDate.ToShortDateString()</td>
                        <td>@item.FeedType</td>
                        <td>@item.QuantityKg</td>
                        <td>
                            <button class="btn btn-danger btn-sm"
                                    onclick="event.stopPropagation(); confirmDeleteUsage(@item.FeedUsageId)">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="right-panel">
        <h4 id="defaultMessage">Select a row to edit or view details</h4>
        <div id="editContainer"></div>
    </div>
</div>

<div class="bottom-bar">
    <button class="btn btn-primary btn-create" onclick="openCreateUsage()">Create New Feed Usage</button>
</div>

<!-- Optional custom modal for fancy confirmations -->
<div id="customModalOverlay">
    <div id="customModalBox">
        <h4 id="modalTitle"></h4>
        <p id="modalMessage"></p>
        <div id="modalButtons"></div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var table = document.getElementById('usageTable');
            table.addEventListener('click', function(e) {
                var row = e.target.closest('tr[data-usage-id]');
                // skip if user clicked the 'delete' button
                if (row && !e.target.closest('.btn-danger')) {
                    var usageId = row.getAttribute('data-usage-id');
                    loadEditPartial(usageId);
                }
            });
        });

        function openCreateUsage() {
            fetch('/FeedUsage/CreatePartial')
                .then(res => res.text())
                .then(html => {
                    document.getElementById('defaultMessage').style.display = 'none';
                    document.getElementById('editContainer').innerHTML = html;
                })
                .catch(err => console.error('Error loading create partial:', err));
        }

        function loadEditPartial(usageId) {
            fetch('/FeedUsage/EditPartial/' + usageId)
                .then(res => res.text())
                .then(html => {
                    document.getElementById('defaultMessage').style.display = 'none';
                    document.getElementById('editContainer').innerHTML = html;
                })
                .catch(err => console.error('Error loading edit partial:', err));
        }

        function loadDeletePartial(usageId) {
            fetch('/FeedUsage/DeletePartial/' + usageId)
                .then(res => res.text())
                .then(html => {
                    document.getElementById('defaultMessage').style.display = 'none';
                    document.getElementById('editContainer').innerHTML = html;
                })
                .catch(err => console.error('Error loading delete partial:', err));
        }

        function closeRightPanel() {
            document.getElementById('editContainer').innerHTML = '';
            document.getElementById('defaultMessage').style.display = '';
        }

        // Optional fancy confirm
        function openCustomDialog(title, message, confirmText, onConfirm, onCancel) {
            document.getElementById('modalTitle').innerText = title;
            document.getElementById('modalMessage').innerText = message;
            let btnDiv = document.getElementById('modalButtons');
            btnDiv.innerHTML = '';

            let confirmBtn = document.createElement('button');
            confirmBtn.classList.add('btn','btn-primary','me-2');
            confirmBtn.innerText = confirmText || 'OK';
            confirmBtn.onclick = function() {
                closeCustomDialog();
                if (onConfirm) onConfirm();
            };
            btnDiv.appendChild(confirmBtn);

            let cancelBtn = document.createElement('button');
            cancelBtn.classList.add('btn','btn-secondary');
            cancelBtn.innerText = 'Cancel';
            cancelBtn.onclick = function() {
                closeCustomDialog();
                if (onCancel) onCancel();
            };
            btnDiv.appendChild(cancelBtn);

            document.getElementById('customModalOverlay').style.display = 'block';
        }
        function closeCustomDialog() {
            document.getElementById('customModalOverlay').style.display = 'none';
        }

        function confirmDeleteUsage(usageId) {
            openCustomDialog(
                'Delete Feed Usage',
                'Are you sure you want to delete usage #' + usageId + '?',
                'Yes, Delete',
                function() {
                    loadDeletePartial(usageId);
                },
                function() {}
            );
        }
    </script>
}
