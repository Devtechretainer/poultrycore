@model PoultryWeb.Models.FeedUsageModel

<h4>Delete Feed Usage (ID: @Model.FeedUsageId)</h4>

<p>Are you sure you want to delete this feed usage record?</p>
<ul>
    <li><strong>Flock ID:</strong> @Model.FlockId</li>
    <li><strong>Date:</strong> @Model.UsageDate.ToShortDateString()</li>
    <li><strong>Feed Type:</strong> @Model.FeedType</li>
    <li><strong>Quantity (Kg):</strong> @Model.QuantityKg</li>
</ul>

<form asp-action="DeleteConfirmed" asp-controller="FeedUsage" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="FeedUsageId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
</form>
