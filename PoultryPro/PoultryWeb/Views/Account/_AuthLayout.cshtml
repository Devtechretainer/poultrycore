﻿@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        font-family: 'Roboto', sans-serif;
    }

    .nav-link.active-tab {
        background-color: #ffe4e1; /* Light pink background for the active tab */
        border-color: #ddd;
        border-bottom-color: transparent;
    }

    .card-body {
        padding: 0px !important;
    }
</style>
<div class="row justify-content-center" style="margin-top: -30px">
    <div class="col-lg-5 col-md-9 col-sm-12 mt-2">
        <div class="card login-logout-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login">
                            Log In
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Register">
                            Register
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <div class="col-10 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.5.1/knockout-min.js"></script>

@RenderSection("Scripts", required: false)

@section Scripts{

    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                    $this.addClass('active');
                }
            })


